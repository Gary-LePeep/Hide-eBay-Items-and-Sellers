{
  "manifest_version": 3,
  "name": "easyBlock: Hide Items, Sellers, Sponsored, and More",
  "version": "1.0.0",
  "description": "Hide items, sellers, and sponsored posts that you don't like from appearing in search and category results on your favorite shopping sites.",
  "icons": {
    "128": "src/resources/icon128.png",
    "48": "src/resources/icon48.png",
    "16": "src/resources/icon16.png"
  },
  "page_action": {
    "default_icon": "src/resources/icon16.png",
    "default_popup": "src/content/popup.html"
  },
  "action": {
    "default_icon": "src/resources/icon16.png",
    "default_popup": "src/content/popup.html"
  },
  "content_scripts": [
    {
      "js": ["src/resources/jquery-3.4.1.min.js", "src/content/content.js"],
      "css": ["src/content/css/content.css"],
      "matches": ["*://*/*"],
      "include_globs": ["*://*.ebay.*/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["src/background/background.js"],
    "service_worker": "src/background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/resources/icon48.png"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["storage", "unlimitedStorage", "tabs", "declarativeContent", "active_tab", "webRequest", "webRequestBlocking"],
  "host_permissions": [
    "https://*.ebay.com/*",
    "https://*.ebay.com.au/*",
    "https://*.ebay.at/*",
    "https://*.ebay.be/*",
    "https://*.ebay.ca/*",
    "https://*.ebay.fr/*",
    "https://*.ebay.de/*",
    "https://*.ebay.com.hk/*",
    "https://*.ebay.ie/*",
    "https://*.ebay.it/*",
    "https://*.ebay.com.my/*",
    "https://*.ebay.nl/*",
    "https://*.ebay.ph/*",
    "https://*.ebay.pl/*",
    "https://*.ebay.com.sg/*",
    "https://*.ebay.es/*",
    "https://*.ebay.ch/*",
    "https://*.ebay.co.uk/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{78328bdc-5edb-480c-8ea8-0160a565c371}"
    }
  }
}
